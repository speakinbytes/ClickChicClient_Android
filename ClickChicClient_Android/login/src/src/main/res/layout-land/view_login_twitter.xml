<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginTwitterLayout"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txTwitterLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_margin_horizontal_register"
        android:layout_marginTop="@dimen/login_margin_vertical_txlogin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_margin_horizontal_user"
        android:layout_marginTop="@dimen/login_margin_vertical_user"
        android:text="@string/email"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="@dimen/login_edit_text_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/txEmail"
        android:layout_marginLeft="@dimen/login_margin_horizontal_user"
        android:layout_marginRight="@dimen/login_margin_horizontal_marco"
        android:layout_marginTop="@dimen/login_margin_between_text_edit"
        android:background="@drawable/cuadradotexto"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null" />

    <com.rtve.login.views.TwitterBtn
        android:id="@+id/loginTwitterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/editEmail"
        android:layout_below="@id/editEmail"
        android:layout_marginTop="@dimen/login_margin_between_edit_button"
        android:background="@drawable/btn_login_login"
        android:minHeight="2dp"
        android:minWidth="2dp" />

    <TextView
        android:id="@+id/txRequiredFieldTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginTwitterButton"
        android:layout_marginLeft="@dimen/login_margin_horizontal_user"
        android:layout_marginTop="@dimen/login_margin_between_edit_button"
        android:paddingBottom="@dimen/login_margin_vertical_bottom_required"
        android:text="@string/required_field"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/cancelar_tw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loginTwitterButton"
        android:layout_alignBottom="@+id/loginTwitterButton"
        android:layout_marginRight="@dimen/login_margin_horizontal_marco"
        android:layout_toLeftOf="@+id/loginTwitterButton"
        android:background="@drawable/btn_cancelar_login"
        android:minHeight="2dp"
        android:minWidth="2dp"
        android:onClick="onClick" />

</RelativeLayout>