<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_weight="4">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgShop"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:layout_alignTop="@+id/txtModel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtModel"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgShop"
        android:layout_marginLeft="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtTime"
        android:text="3 hrs ago"
        android:layout_marginTop="2dp"
        android:textColor="#333333"
        android:layout_alignTop="@+id/txtModel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" by "
        android:id="@+id/txtBy"
        android:layout_below="@+id/txtModel"
        android:layout_alignLeft="@+id/txtModel"
        android:layout_alignStart="@+id/txtModel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_blue_bright"
        android:id="@+id/txtSellerName"
        android:text="RockerTree"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/txtBy"
        android:layout_toRightOf="@+id/txtBy" />
</RelativeLayout>